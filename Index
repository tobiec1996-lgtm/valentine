  <script>
    const noBtn = document.getElementById('noBtn');
    const yesBtn = document.getElementById('yesBtn');
    const playArea = document.getElementById('playArea');
    const questionView = document.getElementById('questionView');
    const galleryView = document.getElementById('galleryView');
    const backBtn = document.getElementById('backBtn');
    const confettiBtn = document.getElementById('confettiBtn');
    const pop = document.getElementById('pop');
    const musicBtn = document.getElementById('musicBtn');
    const toast = document.getElementById('toast');
    const hintText = document.getElementById('hintText');

    let soundOn = false;
    let dodgeLevel = 0;

    function rand(min, max){ return Math.floor(Math.random() * (max - min + 1)) + min; }

    function showToast(text){
      toast.textContent = text;
      toast.classList.add('show');
      setTimeout(() => toast.classList.remove('show'), 1600);
    }

    function moveNoButton(){
      dodgeLevel++;

      const areaRect = playArea.getBoundingClientRect();
      const btnRect = noBtn.getBoundingClientRect();

      const maxLeft = areaRect.width - btnRect.width;
      const maxTop  = areaRect.height - btnRect.height;

      const pad = dodgeLevel < 4 ? 14 : 4;
      const left = rand(pad, Math.max(pad, Math.floor(maxLeft - pad)));
      const top  = rand(pad, Math.max(pad, Math.floor(maxTop - pad)));

      noBtn.style.left = left + "px";
      noBtn.style.top  = top + "px";

      noBtn.textContent =
        dodgeLevel < 4  ? "NEE ğŸ™ˆ" :
        dodgeLevel < 7  ? "Hou op probeer ğŸ˜‚" :
        dodgeLevel < 10 ? "Jy gaan my nie vang nie ğŸ˜­" :
        dodgeLevel < 13 ? "Druk net JA ğŸ˜" :
        "ASB ğŸ˜…ğŸ’˜";

      hintText.textContent =
        dodgeLevel < 5 ? "Wenk: probeer â€œNEEâ€ tikâ€¦ as jy durf ğŸ˜…" :
        dodgeLevel < 9 ? "Heheâ€¦ dis nou moeiliker ğŸ˜ˆ" :
        "Ek dink die heelal wil hÃª jy moet JA druk ğŸ’–";

      if(soundOn){
        try { pop.currentTime = 0; pop.play(); } catch(e) {}
      }
    }

    noBtn.addEventListener('mouseenter', moveNoButton);
    noBtn.addEventListener('touchstart', (e) => { e.preventDefault(); moveNoButton(); }, {passive:false});
    noBtn.addEventListener('click', moveNoButton);

    yesBtn.addEventListener('click', () => {
      questionView.classList.add('hidden');
      galleryView.classList.remove('hidden');
      burstHearts(35);
      showToast("Beste keuse ooit ğŸ’–");
    });

    backBtn.addEventListener('click', () => {
      galleryView.classList.add('hidden');
      questionView.classList.remove('hidden');
      showToast("Okayâ€¦ maar ek weet dis JA ğŸ˜„");
    });

    confettiBtn.addEventListener('click', () => burstHearts(55));

    document.querySelectorAll('[data-voucher]').forEach(btn => {
      btn.addEventListener('click', () => {
        burstHearts(18);
        showToast(btn.getAttribute('data-voucher'));
      });
    });

    function burstHearts(n=20){
      for(let i=0;i<n;i++){
        const el = document.createElement('div');
        el.className = 'heart';
        el.textContent = Math.random() > 0.5 ? 'ğŸ’–' : (Math.random() > 0.5 ? 'ğŸ’˜' : 'ğŸ’•');
        el.style.left = rand(0, window.innerWidth) + "px";
        el.style.bottom = "-20px";
        el.style.fontSize = rand(14, 30) + "px";
        el.style.animationDuration = rand(2400, 5200) + "ms";
        document.body.appendChild(el);
        setTimeout(() => el.remove(), 6000);
      }
    }
    setInterval(() => burstHearts(4), 1200);

    musicBtn.addEventListener('click', () => {
      soundOn = !soundOn;
      musicBtn.textContent = soundOn ? "ğŸ”Š Klank: Aan" : "ğŸ”‡ Klank: Af";
      burstHearts(10);
      showToast(soundOn ? "Klank aan ğŸ”Š" : "Klank af ğŸ”‡");
    });

    window.addEventListener('load', () => {
      noBtn.style.left = "58%";
      noBtn.style.top = "55%";
    });
  </script>
